#!/bin/sh

if [ ! `uname` = 'Linux' ]; then
  echo "${RED}The script in only work for Linux... Abort execution...${NORMAL}"
  exit 1
fi

URL="https://github.com/Schniz/fnm/releases/download/v${1}/fnm-linux.zip"

rm /tmp/fnm-linux.zip
rm -fr /tmp/fnm-linux

curl -L ${URL} -o /tmp/fnm-linux.zip

unzip /tmp/fnm-linux.zip -d /tmp

cp /tmp/fnm-linux/fnm ${HOME}/.fnm/fnm

fnm --version
